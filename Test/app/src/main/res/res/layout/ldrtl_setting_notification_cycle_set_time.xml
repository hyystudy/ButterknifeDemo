<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/no_color" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:background="@color/light_gray" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="horizontal" android:id="@id/ad_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" />
        <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/ad_layout">
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <TextView android:text="@string/notification_time" style="@style/ldrtl_data_title_text" />
                    <TextView android:text="@string/tap_to_edit" style="@style/ldrtl_data_tap_to_edit" />
                    <TextView android:id="@id/notification_time" style="@style/data_input_text" />
                </LinearLayout>
                <ImageView style="@style/data_devider" />
                <TextView android:text="@string/notification_text" style="@style/ldrtl_data_title_text" />
                <TextView android:text="@string/tap_to_edit" style="@style/ldrtl_data_tap_to_edit" />
                <EditText android:id="@id/notification_text" android:layout_marginBottom="30.0dip" android:textCursorDrawable="@null" style="@style/data_input_text" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>