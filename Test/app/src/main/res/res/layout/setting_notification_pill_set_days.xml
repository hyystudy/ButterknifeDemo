                    <TextView android:text="@string/comsume_pill_days_tip" style="@style/data_title_text" />
                    <RelativeLayout style="@style/data_input_layout">
                        <TextView android:id="@id/consume_pill_days" style="@style/notifation_data_value" />
                        <TextView android:id="@id/consume_pill_unit" android:layout_toRightOf="@id/consume_pill_days" style="@style/data_unit" />
                        <LinearLayout style="@style/button_plus_minus_layout">
                            <Button android:id="@id/consume_pill_days_up" style="@style/button_plus" />
                            <Button android:id="@id/consume_pill_days_down" style="@style/button_minus" />
                        </LinearLayout>
                    </RelativeLayout>
                    <ImageView style="@style/data_devider" />
                    <TextView android:text="@string/no_pill_days_tip" style="@style/data_title_text" />
                    <RelativeLayout style="@style/data_input_layout">
                        <TextView android:id="@id/no_pill_days" style="@style/notifation_data_value" />
                        <TextView android:id="@id/no_pill_unit" android:layout_toRightOf="@id/no_pill_days" style="@style/data_unit" />
                        <LinearLayout style="@style/button_plus_minus_layout">
                            <Button android:id="@id/no_pill_days_up" style="@style/button_plus" />
                            <Button android:id="@id/no_pill_days_down" style="@style/button_minus" />
                        </LinearLayout>
                    </RelativeLayout>
                    <ImageView android:background="@color/setting_devider" android:layout_width="fill_parent" android:layout_height="1.0dip" android:layout_marginLeft="10.0dip" android:layout_marginTop="20.0dip" android:layout_marginRight="10.0dip" />
                </LinearLayout>
                <RelativeLayout android:id="@id/notification_state_layout1" style="@style/data_checkbox_layout">
                    <CheckBox android:id="@id/bt_switch" style="@style/data_checkbox_layout_checkbox" />
                    <TextView android:text="@string/everyday_pill_tip" android:layout_toLeftOf="@id/bt_switch" style="@style/data_checkbox_layout_text" />
                    <ImageView android:layout_alignParentBottom="true" style="@style/data_devider" />
                </RelativeLayout>
                <LinearLayout android:orientation="vertical" android:id="@id/date_layout" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <TextView android:text="@string/first_pill_for_this_cycle_tip" style="@style/data_title_text" />
                    <TextView android:text="@string/tap_to_edit" style="@style/data_tap_to_edit" />
                    <TextView android:id="@id/start_date" style="@style/data_input_text" />
                    <ImageView style="@style/data_devider" />
                </LinearLayout>
                <TextView android:id="@id/wiki" android:layout_marginBottom="20.0dip" android:text="@string/pill_wiki" style="@style/data_tip_text" />
                <Button android:textSize="@dimen/setting_title_size" android:textColor="@color/title_text" android:id="@id/next" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="10.0dip" android:layout_marginRight="10.0dip" android:layout_marginBottom="10.0dip" android:text="@string/next" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>